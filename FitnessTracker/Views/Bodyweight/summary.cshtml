@model BodyweightRecord[]

@section Scripts{
}

@{
    BodyweightRecord mostRecentWeight = Model?.OrderByDescending(record => record.Date).FirstOrDefault();
    IEnumerable<BodyweightRecord> currentWeekRecords = Model?.Where(record => record.Date >= DateTime.Today.AddDays(-7)).OrderByDescending(record => record.Date);
    float currentWeekProgress = 0;
    if (currentWeekRecords.Count() > 0)
    {
        currentWeekProgress = currentWeekRecords.First().Weight - currentWeekRecords.Last().Weight;
    }
}

@{
    ViewData["Title"] = "Bodyweight";
}
<div>
    <a asp-controller="Bodyweight" asp-action="EditRecords" class="btn btn-primary">Edit Bodyweights</a>
    <a asp-controller="Bodyweight" asp-action="EditTarget" class="btn btn-primary">Edit Target</a>
</div>

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h6 class="card-subtitle">Most Recent Bodyweight</h6>
            </div>
            <div class="card-body">
                <h4 class="card-title text-center">
                    @(mostRecentWeight == null ? 0 : mostRecentWeight.Weight)kg
                </h4>
                <h6 class="card-text text-center">
                    tesetstst
                </h6>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card">
            <div class="card-header">
                <h6 class="card-subtitle">This Week's Progress</h6>
            </div>
            <div class="card-body">
                <h4 class="card-title text-center">
                    @(currentWeekProgress >= 0 ? "+" : "")@(currentWeekProgress)kg
                </h4>
            </div>
        </div>
    </div>

    <div class="col">

    </div>

    <div class="col">

    </div>

    <div class="col">

    </div>


</div>