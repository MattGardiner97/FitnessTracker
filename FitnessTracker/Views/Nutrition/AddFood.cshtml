@model FitnessTracker.Controllers.NewFoodModel

@{
    ViewData["Title"] = "Add Food";
}

@section Scripts{
    <script src="~/js/Nutrition/AddFood.js"></script>
}



<h2>Add Existing Food</h2>
<div class="horizontalScrollBox" style="overflow-x:auto;overflow-y:hidden;white-space:nowrap;">
        @foreach (Food f in Model.UserFoods)
        {
            <div class="col-2 d-inline-block float-none" style="margin-right:-0.5rem;margin-left:-0.5rem">
                <div class="card" data-ID="@f.ID" data-Name="@f.Name" data-Carbs="@f.Carbohydrates" data-Protein="@f.Protein" data-Fat="@f.Fat" data-Calories="@f.Calories" data-ServingSize="@f.ServingSize" data-ServingUnit="@f.ServingUnit">
                    <div class="card-body">
                        <h3 class="text-center">
                            @f.Name
                        </h3>

                        <h6 class="text-center font-weight-lighter">
                            @(f.ServingSize)@(f.ServingUnit.ToString())
                        </h6>
                        <h5 class="text-center font-weight-normal">
                            @(f.Calories)cal
                        </h5>

                    </div>
                    <div class="card-footer text-center">
                        <button type="button" class="btn btn-primary" onclick="addFoodRecord(this);">Add</button>
                        <button type="button" class="btn btn-primary" onclick="setNewFoodFields(this);">Edit</button>
                        <form asp-controller="Nutrition" asp-action="DeleteFood" class="d-inline">
                            <input type="hidden" value="@f.ID" name="ID" />
                            <input type="submit" class="btn btn-danger" value="Delete" />
                        </form>
                    </div>
                </div>

            </div>
        }
    </div>

<form id="NewFoodForm" asp-controller="Nutrition" asp-action="AddNewFood" method="post" class="mt-4">
    <div class="mb-2">
        <h2 class="d-inline mr-2 align-middle" id="NewFoodHeader">Add New Food</h2>
        <input type="submit" class="btn btn-primary" value="Save" />
        <input type="reset" class="btn btn-danger d-none" value="Cancel" id="NewFoodCancel" onclick="cancelEdit();" />
    </div>

    <div class="form-group form-inline">
        <input type="hidden" name="ID" id="existingFoodID" value="0" />

        <label class="mr-1">Name</label>
        <input type="text" name="Name" class="form-control mr-4" id="newFoodName" />

        <label class="mr-1">Serving Size</label>
        <input type="number" name="ServingSize" class="form-control mr-4" id="newFoodSize" />

        <label class="mr-1" id="newFoodUnit">Serving Unit</label>
        <select name="ServingUnit">
            <option value="ea">ea</option>
            <option value="ml">ml</option>
            <option value="g">g</option>
        </select>
    </div>

    <div class="form-group form-inline">
        <label class="mr-1">Carbohydrates</label>
        <input type="number" name="Carbs" class="form-control mr-4" id="newFoodCarbs" />

        <label class="mr-1">Protein</label>
        <input type="number" name="Protein" class="form-control mr-4" id="newFoodProtein" />

        <label class="mr-1">Fat</label>
        <input type="number" name="Fat" class="form-control mr-4" id="newFoodFat" />

        <label class="mr-1">Calories</label>
        <input type="number" name="Calories" class="form-control  mr-4" id="newFoodCalories" />
    </div>
</form>

<h2 class="mt-3">Food Records</h2>

<form asp-controller="Nutrition" asp-action="EditRecords" method="post">

    <div class="form-group form-inline">
        <label>Date</label>
        <input type="date" name="Date" class="form-control" value="@(((DateTime)ViewData["selectedDate"]).ToString("yyyy-MM-dd"))" />
    </div>


    <table class="table">
        <thead>
            <tr>
                <th>Food</th>
                <th>Quantity</th>
                <th>Carbohydrates</th>
                <th>Protein</th>
                <th>Fat</th>
                <th>Calories</th>
                <th></th>
            </tr>

            <tr id="NewRowTemplate" class="d-none">
                <td>
                    <input type="hidden" class="recordID" />
                    <input type="text" class="recordName" disabled />
                </td>
                <td><input type="number" class="recordQuantity" min="0" step="0.1" value="1" /></td>
                <td><input type="number" class="recordCarbs" disabled /></td>
                <td><input type="number" class="recordProtein" disabled /></td>
                <td><input type="number" class="recordFat" disabled /></td>
                <td><input type="number" class="recordCalories" disabled /></td>
                <td><a href="#" onclick="removeRow(this)">Remove</a></td>
            </tr>
        </thead>
        <tbody id="RecordBody">
        </tbody>
    </table>
</form>